  <html>
  <head>
    <title>WhatMunch App</title>
    <link rel='stylesheet' href='/css/normalize.min.css'>
    <link rel='stylesheet' href='/css/main.css'>
  </head>

  <body>
    <div class='main-container'>
      <div class='header-container'>
        <h1 class='title'>WhatMunch</h1>
      </div>

      <section id="form-group">
        <form action='/' method='post'>
          <input name='thismunch[what]' type="text"  placeholder="Food item" id
        ="item-input" required>

          <input name='thismunch[cost]'  type='number' id="out-of-range-input" step=0.01 min=0 max=100 required placeholder="£" size="200000">
          <span class="help-text"></span>
          <hr>
          <input type='submit' id="addButton" value="Add Munch">
        </form>
      </section>

      <table>
        <%= $munch.join('') %>
        Running Total is: £<%= $running_total %>
      </table>

    </div>
  </body>
  </html>